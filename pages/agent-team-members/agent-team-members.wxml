<view class="agent-team-members_container">
  <t-navbar t-class="navBar" left-arrow title="团队成员" />
  <view class="nav_bg"></view>
  <t-cell-group t-class="device_nav" theme="card">
    <t-cell title="测试水水水水" description="团队编号：123">
      <t-avatar slot="left-icon" size="large" image="{{ossUrl + teamInfo.avatar}}"></t-avatar>
      <view slot="right-icon" class="right_box">编辑团队</view>
    </t-cell>
  </t-cell-group>
  <view class="team_tabs_box">
    <view class="admin-team_tabs">
      <t-tabs t-class="tabs_box" t-class-active="active_style" t-class-item="item_style" defaultValue="{{tabsValue}}" theme="tag" bind:change="tabClick" show-bottom-line="{{false}}">
        <t-tab-panel wx:key="index" label="代理商" value="{{1}}" />
        <t-tab-panel wx:key="index" label="门店" value="{{2}}" />
      </t-tabs>
    </view>
  </view>
  <scroll-view wx:if="{{tabsValue === 1}}" class="scroll-view" scroll-y="true" scroll-with-animation="true" bindscrolltolower="onReachBottom" refresher-enabled="{{true}}" refresher-triggered="{{refresher}}" bindrefresherrefresh="pullDownToRefresh">
    <block wx:for="{{20}}">
      <t-cell t-class="list_item" description="1333333333333" arrow>
        <t-avatar slot="left-icon" shape="round" size="large" image="{{ossUrl + item.user.avatar}}"></t-avatar>
        <view slot="title" class="title_box">
          <text class="title_text">码字测试实施</text>
          <view class="tag_box" slot="description">
            <image class="tag_icon" src="../../static/icon/admin.png" />
            <text class="tag_text">美容师</text>
          </view>
        </view>
      </t-cell>
    </block>
    <view style="margin-top: 40rpx">
      <t-empty t-class="empty" t-class-image="empty_image" image="/static/icon/footer.png" description="糟糕，到底了" bindtap="onReachBottom" />
    </view>
  </scroll-view>
  <scroll-view wx:if="{{tabsValue === 2}}" class="scroll-view" scroll-y="true" scroll-with-animation="true" bindscrolltolower="onReachBottom" refresher-enabled="{{true}}" refresher-triggered="{{refresher}}" bindrefresherrefresh="pullDownToRefresh">
    <block wx:for="{{20}}">
      <t-cell t-class="list_item" arrow>
        <t-avatar slot="left-icon" shape="round" size="large" image="{{item.avatar}}"></t-avatar>
        <view slot="title" class="title_box">
          <text class="title_text">美之颜美学定制中心</text>
        </view>
        <view slot="description">
          <view class="description_text">团队编号：{{item.teamCode}}</view>
          <view class="description_text">广东省，苏州市，吴江区，测水</view>
        </view>
      </t-cell>
    </block>
    <view style="margin-top: 40rpx">
      <t-empty t-class="empty" t-class-image="empty_image" image="/static/icon/footer.png" description="糟糕，到底了" bindtap="onReachBottom" />
    </view>
  </scroll-view>
  <button class="invite_btn" style="margin-bottom: {{marginBottom}}" bindtap="onSubmit">
    邀请加入
  </button>
</view>
<t-message id="t-message" />