<view class="team-info_container">
  <t-navbar t-class="navBar" left-arrow title="设置信息" />
  <view class="info_form">
    <view class="form_item">
      <view class="item_label">封面</view>
      <view class="item_value" bindtap="updateTeamCover">
        <t-avatar class="avatar" size="small" image="{{ossUrl + form.deptAvatar}}" />
      </view>
      <t-icon name="chevron-right" size="48rpx" color="#C5C8CB" />
    </view>
    <view class="bd05" />
    <view class="form_item">
      <view class="item_label">名称</view>
      <view class="item_value">
        <t-input t-class="item-input" t-class-tips="errMsg" slot="note" placeholder="请输入名称" value="{{form.deptName}}" type="text" tips="{{nameError ? '请检查名称输入' : ''}}" bindblur="onNameInput" confirm-type="next" borderless></t-input>
      </view>
      <t-icon name="chevron-right" size="48rpx" color="#C5C8CB" />
    </view>
    <view class="bd05" />
    <view class="form_item" bindtap="showCascader">
      <view class="item_label">地址</view>
      <view class="item_value">
        <t-input t-class="item-input" t-class-tips="errMsg" slot="note" placeholder="请选择地址" value="{{addressValue || '请选择地址'}}" type="text" tips="{{addressError ? '请检查地址选择' : ''}}" confirm-type="next" borderless disabled></t-input>
      </view>
      <t-icon name="chevron-right" size="48rpx" color="#C5C8CB" />
    </view>
    <view class="bd05" />
    <view class="addressDetail">
      <text class="item_label">详细地址</text>
      <t-textarea t-class="external-class" placeholder="请输入详细地址" bordered disableDefaultPadding="{{true}}" value="{{form.addressDetail}}" bindchange="onAddressDetailInput" />
    </view>
  </view>
  <button class="save_btn" bindtap="onSubmit">保存</button>
</view>
<t-message id="t-message" />
<t-cascader visible="{{visible}}" value="{{value}}" options="{{options}}" title="请选择地址" bind:change="onChange" />